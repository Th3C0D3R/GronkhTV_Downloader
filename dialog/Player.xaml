<Window x:Class="GronkhTV_DL.dialog.Player"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GronkhTV_DL.dialog"
		xmlns:WPFVideo="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        mc:Ignorable="d"
        Title="Player" Height="450" Width="800" Foreground="Black">
	<Grid>
		<WPFVideo:VideoView
			x:Name="player">
			<Button 
				x:Name="btnPlay"
				Click="Button_Click" 
				Content="Play/Pause" 
				HorizontalAlignment="Center" 
				VerticalAlignment="Center" 
				Foreground="#FF0A0808" 
				BorderBrush="Transparent" 
				Background="#00DDDDDD" 
				FontSize="20"/>
		</WPFVideo:VideoView>

	</Grid>
</Window>
